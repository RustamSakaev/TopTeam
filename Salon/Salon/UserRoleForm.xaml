<Window x:Class="Salon.Users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salon"
        mc:Ignorable="d"
        Title="Users" Height="326.667" Width="427">
    <Window.Resources>
        <ResourceDictionary Source="Styles/BasicStyles.xaml" />
    </Window.Resources>
    <DockPanel Name="Osnova" Height="297" VerticalAlignment="Top" Margin="0,0,0,-1">
        <StackPanel Name="First" DockPanel.Dock="Top"  Height="276" Visibility="Visible">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel>
                    <Label x:Name="label" Content="Пользователи" Style="{StaticResource signature}"/>
                    <ListBox x:Name="UserslistBox" Height="245" Width="138" Loaded="OnLoad" SelectionChanged="listBox_SelectionChanged"/>
                </StackPanel>
                <StackPanel Canvas.Left="173" Canvas.Top="16">
                    <Label x:Name="label1" Content="Роли пользователя" Style="{StaticResource signature}"/>
                    <ListBox x:Name="RoleslistBox" Height="245" Width="138" SelectionMode="Extended"/>
                </StackPanel>
                <StackPanel x:Name="ButtonsPanel"  Style="{StaticResource buttonsPanel}" Width="119" Margin="0,12,0,0" >
                    <Button x:Name="AddButton" Content="Добавить" Click="button_Click"/>
                    <Button x:Name="DeleteButton" Content="Удалить" Click="button1_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Name="Second" DockPanel.Dock="Top"  Height="276" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel>
                        <Label Content="Роли:" Style="{StaticResource signature}" />
                        <ListBox x:Name="AllRoleslistBox" Height="270" Width="246" SelectionMode="Extended"/>
                    </StackPanel>
                    <StackPanel x:Name="ButtonsPanel1"  Style="{StaticResource buttonsPanel}" Width="119" Height="249" Margin="0,-15,0,0">
                        <Button x:Name="AddRoleButton" Content="Добавить" Click="button2_Click"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
    </DockPanel>
</Window>