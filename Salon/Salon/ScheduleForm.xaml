<Window x:Class="Salon.ScheduleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salon"
        mc:Ignorable="d"
        Title="ScheduleForm" Height="446.916" Width="562.804" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary Source="Styles/BasicStyles.xaml" />
    </Window.Resources>
    <DockPanel>
        <WrapPanel Width="180">
            <StackPanel Width="181" Height="412">
                <Label Content="Мастер" Margin="0,0,0,0" Height="22"/>
                <ComboBox x:Name="workerCmbBox" Margin="0" Width="120" ItemsSource="{Binding}" DisplayMemberPath="Фамилия" SelectedValuePath="id" HorizontalAlignment="Left" LayoutUpdated="ComboBox_LayoutUpdated" SelectionChanged="workerChkBox_SelectionChanged" Height="20"/>
                <Label Content="Тип мастера" Margin="0,0,22,0"/>
                <ComboBox x:Name="typeMasterCmbBox" Margin="0" ItemsSource="{Binding}" DisplayMemberPath="Name" SelectedValuePath="ID" HorizontalAlignment="Left" Width="120" Height="20"/>
                <Calendar HorizontalAlignment="Left" Width="176"/>
                <TextBox Height="23" Margin="0" TextWrapping="Wrap" Text="От"/>
                <TextBox Height="23" Margin="0" TextWrapping="Wrap" Text="До"/>
                <Button Content="Сохранить" Margin="0"/>
                <Button Content="Закрыть" Margin="0"/>
            </StackPanel>
        </WrapPanel>
        <WrapPanel Height="406" VerticalAlignment="Top" Width="371" HorizontalAlignment="Left">
            <DataGrid Height="380" Margin="0" Width="354" Background="#FF484C65"/>
        </WrapPanel>
    </DockPanel>
</Window>
