<Window x:Class="Salon.MasterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salon"
        mc:Ignorable="d"
        Title="MasterPage" Height="300" Width="437.334" ResizeMode="CanMinimize">
    <DockPanel LastChildFill="True">
        <StackPanel x:Name="Header" DockPanel.Dock="Top" Background="AliceBlue" Height="25" >
            
        </StackPanel>
        <StackPanel x:Name="Footer" DockPanel.Dock="Bottom" Background="BlanchedAlmond" Height="25">
            
        </StackPanel>
        
        <StackPanel x:Name="ButtonsPanel" DockPanel.Dock="Right" Background="DarkGreen" Width="100" >
            <Button x:Name="button" Margin="5 10 5 10" Content="Добавить"/>
            <Button x:Name="button1" Margin="5 0 5 10" Content="Редактировать"/>
            <Button x:Name="button2" Margin="5 20 5 10" Content="Удалить"/>

        </StackPanel>
        <StackPanel x:Name="TablePanel" DockPanel.Dock="Left" Background="Aquamarine" >
            <DataGrid x:Name="dataGrid">
                
            </DataGrid>
        </StackPanel>
    </DockPanel>

</Window>
