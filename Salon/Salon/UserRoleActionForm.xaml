<Window x:Class="Salon.UserRoleActionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salon"
        mc:Ignorable="d"
        Title="Выбор сотрудника" Height="300" Width="300">
    <Window.Resources>
        <ResourceDictionary Source="Styles/BasicStyles.xaml" />
    </Window.Resources>
    <DockPanel Name="Osnova" Margin="0,0,0,-1">
        <StackPanel x:Name="Search" Style="{StaticResource search}" >
            <StackPanel x:Name="SearchStack" >
                <Label Content="Фильтр:"/>
                <TextBox x:Name="SearchBox" TextChanged="SearchBox_TextChanged"/>
            </StackPanel>
        </StackPanel>
        <StackPanel>
            <DataGrid Name="UserGrid" ItemsSource="{Binding}" IsReadOnly="True" AutoGeneratingColumn="UserGrid_AutoGeneratingColumn" ColumnWidth="*" MouseDoubleClick="Row_DoubleClick">
                
            </DataGrid>
        </StackPanel>
    </DockPanel>
</Window>
