<Window x:Class="Salon.Kabinet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salon"
        mc:Ignorable="d"
        Title="Kabinet" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="NewPassBox" HorizontalAlignment="Left" Height="23" Margin="42,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="OldPassBox" HorizontalAlignment="Left" Height="23" Margin="42,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="OkButton" Content="Изменить" HorizontalAlignment="Left" Margin="42,152,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label x:Name="label" Content="New Pass" HorizontalAlignment="Left" Margin="42,33,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Old Pass" HorizontalAlignment="Left" Margin="42,87,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
